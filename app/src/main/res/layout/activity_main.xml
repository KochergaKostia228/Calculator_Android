<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0sp"
        android:layout_height="120sp"
        android:text="@string/zero_str"
        android:gravity="center_vertical|end"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="50sp"
        android:textSize="50sp"
        android:textColor="@color/Indigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_mc"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:text="MC"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_mr"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20sp"
        android:text="MR"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/btn_mc"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_ms"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20sp"
        android:text="MS"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/btn_mr"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_m_plus"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20sp"
        android:text="M+"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/btn_ms"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_m_minus"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="20sp"
        android:text="MS"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/btn_m_plus"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!-- Second line -->
    <Button
        android:id="@+id/btn_left"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="&lt;-"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mc" />

    <Button
        android:id="@+id/btn_ce"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="CE"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_mr" />

    <Button
        android:id="@+id/btn_c"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="C"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_ce"
        app:layout_constraintTop_toBottomOf="@+id/btn_ms" />

    <Button
        android:id="@+id/btn_plus_minus"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="±"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_c"
        app:layout_constraintTop_toBottomOf="@+id/btn_m_plus" />

    <Button
        android:id="@+id/btn_square"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="√"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/btn_plus_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_ms" />

    <!-- Third line -->

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_left" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_seven"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_eight"
        app:layout_constraintTop_toBottomOf="@+id/btn_c" />

    <Button
        android:id="@+id/btn_slash"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="/"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_nine"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus_minus" />

    <Button
        android:id="@+id/btn_procent"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="%"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@+id/btn_square" />

    <!-- Fourth line -->

    <Button
        android:id="@+id/btn_four"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_seven" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_four"
        app:layout_constraintTop_toBottomOf="@+id/btn_eight" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_nine" />

    <Button
        android:id="@+id/btn_multiplier"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="*"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_six"
        app:layout_constraintTop_toBottomOf="@+id/btn_slash" />

    <Button
        android:id="@+id/btn_reverse"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="1/x"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/btn_multiplier"
        app:layout_constraintTop_toBottomOf="@+id/btn_procent" />

    <!-- fifth line -->

    <Button
        android:id="@+id/btn_one"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_four" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_five" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_six" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_three"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiplier" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_reverse" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="145sp"
        android:layout_height="60sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_one" />

    <Button
        android:id="@+id/btn_comma"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text=","
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_zero"
        app:layout_constraintTop_toBottomOf="@+id/btn_three" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/btn_comma"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus" />

</androidx.constraintlayout.widget.ConstraintLayout>